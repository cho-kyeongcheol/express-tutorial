<!DOCTYPE html>
<html>
<head>
  <title>express tutorial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>

  <div class="container">
    <div class="regist-box">
      <div class="mb-3">
        <label for="inputId" class="form-label">사용자명</label>
        <input type="text" class="form-control" id="inputId">
      </div>
      <div class="mb-3">
        <label for="inputPw" class="form-label">비밀번호</label>
        <input type="password" class="form-control" id="inputPw">
      </div>
      <div>
        <button onclick="regist()" type="button" class="btn btn-light w-100p">회원가입</button>
      </div>
    </div>
  </div>

  <script src="/js/jquery-3.5.1.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    function regist() {
      var inputId = $('#inputId').val();
      var inputPw = $('#inputPw').val();

      console.log('inputId = ', inputId)
      console.log('inputPw = ', inputPw)

      $.post( "/api/v1/regist", { 
        inputId: inputId, 
        inputPw: inputPw
      })
      .done(function( data ) {
        if (data.result === 'fail') {
          alert('회원가입에 실패하였습니다.')
        } else {
          alert('회원가입 성공!')
        }
      });
    }
  </script>
</body>
</html>



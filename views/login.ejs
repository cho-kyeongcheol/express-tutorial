<!DOCTYPE html>
<html>
<head>
  <title>express tutorial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>

  <div class="container">
    <div class="regist-box">      
      <h1>
        로그인
      </h1>
      <div class="mb-3">
        <label for="inputName" class="form-label">이름</label>
        <input type="text" class="form-control" id="inputName">
      </div>
      <div class="mb-3">
        <label for="inputPw" class="form-label">비밀번호</label>
        <input type="password" class="form-control" id="inputPw">
      </div>
      <div>
        <button onclick="login()" type="submit" class="btn btn-light w-100p">로그인</button>
      </div>
      <div>
        <button onclick="goRegist()" type="submit" class="btn btn-primary w-100p">회원가입</button>
      </div>
    </div>
  </div>




  <script src="/js/jquery-3.5.1.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    function login() {
      var inputName = $('#inputName').val();
      var inputPw = $('#inputPw').val();

      console.log('inputName = ', inputName)
      console.log('inputPw = ', inputPw)      

      $.post( "/api/v1/login", {         
        inputName: inputName,
        inputPw: inputPw
      })
      .done(function( data ) {
        if (data.result === 'fail') {
          alert('아이디 또는 비밀번호가 일치하지 않습니다');
        } else {
          window.location.href = "/";
        }
      });
    }

    function goRegist() {
      window.location.href = "/regist";
    }
  </script>
</body>
</html>


